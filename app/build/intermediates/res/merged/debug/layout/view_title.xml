<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="#4876FF"
    android:orientation="horizontal" >

    <Button
        android:id="@+id/bt_title_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:background="@drawable/ic_account_circle_white_24dp" />

    <Button
        android:id="@+id/bt_title_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/sidebar_setting" />

    <TextView
        android:id="@+id/tx_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@id/bt_title_set"
        android:layout_toRightOf="@id/bt_title_menu"
        android:singleLine="true"
        android:text="åœ¨Android Text"
        android:textSize="23sp" />

</RelativeLayout>